<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profilePicCommentIv"
        android:src="@drawable/baseline_person_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/publisherNameCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher"
        android:layout_alignTop="@+id/profilePicCommentIv"
        android:layout_toEndOf="@+id/profilePicCommentIv"/>

    <TextView
        android:id="@+id/publishTimeCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publisherNameCommentTv"
        android:layout_marginStart="5dp"
        android:textSize="7sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toEndOf="@+id/profilePicCommentIv"
        android:text="Publish time" />

    <TextView
        android:id="@+id/commentDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePicCommentIv"
        android:layout_alignStart="@+id/publisherNameCommentTv"
        android:layout_marginTop="13dp"
        android:text="Comment content" />

</RelativeLayout>

